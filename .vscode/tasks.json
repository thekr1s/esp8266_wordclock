{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "options": {
                "cwd": "${workspaceFolder}/wordclock/",
                "env": {
                    "PATH":"${workspaceFolder}/esp-open-sdk/xtensa-lx106-elf/bin:${env:PATH}",                    
            },
            "args": [
                "${env:USERNAME}"
            ],
            
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                // "reveal": "silent"
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": ["relative", "${workspaceRoot}/builddir"]
            }
        }
    ]
}